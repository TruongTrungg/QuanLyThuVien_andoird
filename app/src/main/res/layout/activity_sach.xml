<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SachActivity">
  <TextView
      android:id="@+id/textView5"
      android:layout_width="406dp"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="#1C2242"
      android:text="Quản Lý Sách" />
  <TextView
      android:id="@+id/tvma"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Mã Sách:" />
  <EditText
      android:id="@+id/edmasach"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Nhập Mã Sách"
      android:inputType="text"
      android:text=""/>
  <TextView
      android:id="@+id/textView8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Tên Sách:" />
  <EditText
      android:id="@+id/edtensach"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Nhap Ten Sach"
      android:inputType="text"
      android:text=""/>
  <TextView
      android:id="@+id/textviewloaisach"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Loại Sách:" />
  <Spinner
      android:id="@+id/sploaisach"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/textViewtacgia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Tác Giả:" />
  <EditText
      android:id="@+id/edtacgia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Nhập Tác Giả"
      android:inputType="text"
      android:text=""/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
    <Button
        android:id="@+id/btdocdatasach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C2242"
        android:layout_marginHorizontal="2dp"
        android:text="Đọc data" />
    <Button
        android:id="@+id/btthemsach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C2242"
        android:layout_marginHorizontal="2dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/btcapnhatsach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C2242"
        android:layout_marginHorizontal="2dp"
        android:text="Cập nhật" />

    <Button
        android:id="@+id/btxoasach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:backgroundTint="#FF0000"
        android:text="Xóa" />
  </LinearLayout>
  <ListView
      android:id="@+id/lvquanlysach"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
    <Button
        android:id="@+id/bthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C2242"
        android:text="Home" />
    <Button
        android:id="@+id/btdocgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:backgroundTint="#1C2242"
        android:icon="@drawable/people"
        android:text="Độc giả" />
    <Button
        android:id="@+id/btmuonsach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:backgroundTint="#1C2242"
        android:text="Mượn Sách" />
    <Button
        android:id="@+id/btThongKe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:backgroundTint="#1C2242"
        android:text="Thống Kê" />

  </LinearLayout>
</LinearLayout>